# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/groupchat
POSTGRES_USER=groupchat_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=groupchat
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379/0

# OpenAI (for embeddings and synthesis)
OPENAI_API_KEY=sk-...

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# Stripe (for payments - optional for MVP)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Application
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here
APP_HOST=0.0.0.0
APP_PORT=8000

# Security
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
JWT_SECRET_KEY=your-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Feature Flags
ENABLE_SMS=false
ENABLE_PAYMENTS=false
ENABLE_REAL_EMBEDDINGS=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json