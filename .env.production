# Production Environment Configuration for AWS EC2

# Database (Update with your RDS endpoint or local PostgreSQL)
DATABASE_URL=postgresql+asyncpg://groupchat_user:YOUR_SECURE_PASSWORD@localhost:5432/groupchat

# Redis (Local or ElastiCache endpoint)
REDIS_URL=redis://localhost:6379/0

# OpenAI API
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN  
TWILIO_PHONE_NUMBER=+1YOUR_TWILIO_PHONE
TWILIO_WEBHOOK_URL=https://yourdomain.com/api/v1/webhooks/twilio

# Stripe (Optional for MVP - payment processing)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_SECRET_KEY=GENERATE_A_SECURE_RANDOM_KEY_HERE
APP_HOST=0.0.0.0
APP_PORT=8000
APP_BASE_URL=https://yourdomain.com

# Security
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
JWT_SECRET_KEY=GENERATE_ANOTHER_SECURE_KEY_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Feature Flags
ENABLE_SMS=true
ENABLE_PAYMENTS=false  # Set to true when ready
ENABLE_REAL_EMBEDDINGS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com  # or SES
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Micropayment Configuration
QUERY_PRICE_CENTS=50  # 50 cents per query
CONTRIBUTOR_POOL_PERCENTAGE=0.7
PLATFORM_PERCENTAGE=0.2
REFERRER_PERCENTAGE=0.1

# Matching Algorithm Weights
EMBEDDING_WEIGHT=0.45
TAG_OVERLAP_WEIGHT=0.20
TRUST_SCORE_WEIGHT=0.15
AVAILABILITY_WEIGHT=0.10
RESPONSIVENESS_WEIGHT=0.10